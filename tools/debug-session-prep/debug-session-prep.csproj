<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <RootNamespace>debug_session_prep</RootNamespace>
    <Nullable>enable</Nullable>
    <DefineConstants>NO_MSBUILD</DefineConstants>
  </PropertyGroup>

  <Import Project="..\..\Configuration.props" />

  <ItemGroup>
    <Compile Include="..\..\src\Xamarin.Android.Build.Tasks\Utilities\AdbRunner.cs" />
    <Compile Include="..\..\src\Xamarin.Android.Build.Tasks\Utilities\NdkHelper.cs" />
    <Compile Include="..\..\src\Xamarin.Android.Build.Tasks\Utilities\ProcessRunner.cs" />
    <Compile Include="..\..\src\Xamarin.Android.Build.Tasks\Utilities\ProcessStandardStreamWrapper.cs" />
    <Compile Include="..\..\src\Xamarin.Android.Build.Tasks\Utilities\ToolRunner.cs" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\xa_start_lldb_server.sh">
      <LogicalName>xa_start_lldb_server.sh</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\lldb-debug-session.sh">
      <LogicalName>lldb-debug-session.sh</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\debug-app.sh">
      <LogicalName>debug-app.sh</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Resources\debug-app.ps1">
      <LogicalName>debug-app.ps1</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Mono.Options" Version="$(MonoOptionsVersion)" />
    <PackageReference Include="ELFSharp" Version="$(ELFSharpVersion)" />
  </ItemGroup>
</Project>
