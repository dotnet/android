<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\..\Configuration.props" />

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>$(DotNetStableTargetFramework)</TargetFramework>
    <OutputPath>../../../bin/$(Configuration)/bin/xapp</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <Nullable>enable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <RootNamespace>Xamarin.XApp</RootNamespace>
    <LibZipSharpBundleAllNativeLibraries>true</LibZipSharpBundleAllNativeLibraries>
    <RollForward>Major</RollForward>

    <Version>$(ProductVersion)</Version>
    <Company>Microsoft Corporation</Company>
    <Copyright>2023 Microsoft Corporation</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Xamarin.Android.Application\Xamarin.Android.Application.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Mono.Options" Version="$(MonoOptionsVersion)" />
  </ItemGroup>
</Project>
