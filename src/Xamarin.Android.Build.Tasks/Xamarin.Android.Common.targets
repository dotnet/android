  </GetConvertedJavaLibraries>
</Target>

<Target Name="_ConvertJavaPlatformJar"
		Condition="'$(UseJackAndJill)' == 'True'"
		Inputs="$(JavaPlatformJarPath)"
		Outputs="$(_JavaPlatformJackPath)">
  <Jill
    Condition="'$(UseJackAndJill)' == 'True'"
    OutputJackDirectory="$(IntermediateOutputPath)android\bin\jack"
    Jars="$(JavaPlatformJarPath)"
    ToolPath="$(JavaToolPath)"
    ToolExe="$(JavaToolExe)"
    JillJarPath="$(JillJarPath)" />
</Target>

<Target Name="_ConvertJarToJack"
		Condition="'$(UseJackAndJill)' == 'True'"
        Inputs="@(_JavaLibrariesToCompile)"
        Outputs="@(_PreprocessedJavaLibrary)">

  <Jill
    Condition="'$(UseJackAndJill)' == 'True'"
    OutputJackDirectory="$(IntermediateOutputPath)android\bin\jack"
    Jars="@(_JavaLibrariesToCompile)"
    ToolPath="$(JavaToolPath)"
    ToolExe="$(JavaToolExe)"
    JillJarPath="$(JillJarPath)" />
</Target>

<Target Name="_FindCompiledJavaFiles" DependsOnTargets="_CompileJava">
  <CreateItem
    Include="$(IntermediateOutputPath)android\bin\classes\\**\*.class">
    <Output TaskParameter="Include" ItemName="_CompiledJavaFiles" />
  </CreateItem>
</Target>

<PropertyGroup>
	<_CompileToDalvikDependsOnTargets>
		_FindCompiledJavaFiles;
		_GetMonoPlatformJarPath;
		_GetAdditionalResourcesFromAssemblies;
		_CreateAdditionalResourceCache;
		_GetLibraryImports
	</_CompileToDalvikDependsOnTargets>
	<_CompileToDalvikInputs>
		$(MSBuildAllProjects)
		;@(_JavaLibrariesToCompileForAppDx)
