<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>$(DotNetStableTargetFramework)</TargetFramework>
    <RootNamespace>manifest_attribute_codegen</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <OutputPath>..\..\bin\Build$(Configuration)</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>
  
  <Import Project="..\..\Configuration.props" />
  
  <ItemGroup>
    <PackageReference Include="Mono.Options" Version="$(MonoOptionsVersion)" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\..\external\Java.Interop\src\Xamarin.SourceWriter\Xamarin.SourceWriter.csproj" />
  </ItemGroup>

  <!-- Generates manifest attributes from Android SDK -->
  <Target Name="GenerateManifestAttributes"
      DependsOnTargets="Build">

    <PropertyGroup>
      <_ManifestAttributeCodeGen>$(TargetPath)</_ManifestAttributeCodeGen>
      <_ManifestFile>$(MSBuildThisFileDirectory)manifest-definition.xml</_ManifestFile>
    </PropertyGroup>
    <ItemGroup>
      <_MacArgs Include="&quot;$(TargetPath)&quot;" />
      <_MacArgs Include="&quot;-sdk-path=$(AndroidSdkFullPath)&quot;" />
      <_MacArgs Include="&quot;-base-dir=$(MSBuildThisFileDirectory)..\..&quot;" />
      <_MacArgs Include="&quot;-metadata-file=$(MSBuildThisFileDirectory)metadata.xml&quot;" />
      <_MacArgs Include="&quot;-output-manifest=$(MSBuildThisFileDirectory)manifest-definition.xml&quot;" />
    </ItemGroup>

    <Exec
        Command="&quot;$(DotNetPreviewTool)&quot; @(_MacArgs, ' ')"
        CustomWarningRegularExpression=".*"
    />

  </Target>

</Project>
