<Project>
  <!-- Import $(LibZipSharpVersion) -->
  <Import Project="..\Directory.Build.props" />
  <PropertyGroup>
    <RestoreAdditionalProjectSources>
      https://pkgs.dev.azure.com/dnceng/public/_packaging/darc-pub-dotnet-runtime-ef07c4f2/nuget/v3/index.json;
      https://pkgs.dev.azure.com/dnceng/public/_packaging/darc-pub-dotnet-runtime-061c8b71/nuget/v3/index.json;
    </RestoreAdditionalProjectSources>
    <!-- Override test output path to redirect to main repo's test output directory -->
    <TestOutputFullPath Condition=" '$(IsXamarinAndroidBuild)' == 'true' ">$(MSBuildThisFileDirectory)..\bin\Test$(Configuration)\</TestOutputFullPath>
    <!-- Use stable target framework for test projects when building as part of main build -->
    <DotNetTargetFramework Condition=" '$(IsXamarinAndroidBuild)' == 'true' ">$(DotNetStableTargetFramework)</DotNetTargetFramework>
  </PropertyGroup>
</Project>
